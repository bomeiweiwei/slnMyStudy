<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - 我的 ASP.NET 應用程式</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Styles.Render("~/Content/kendoCSS")

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")    
    <style>
        body {
            padding-top: 70px;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-md navbar-dark bg-dark fixed-top">
        <a class="navbar-brand" href="@Url.Action("Index","Home", new { area = ""})">
            <img src="~/images/bird.jpg" alt="logo" style="width:40px;" class="rounded-circle">
        </a>
        <button type="button" class="navbar-toggler" data-toggle="collapse" data-target="#navbarCollapse">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarCollapse">
            <div class="navbar-nav">
                @Html.ActionLink("首頁", "Index", "Home", new { area = "Admin" }, new { @class = "nav-item nav-link active" })
                <div class="nav-item dropdown">
                    <a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown">人事管理</a>
                    <div class="dropdown-menu">
                        @Html.ActionLink("員工列表", "Index", "Home", new { area = "Admin" }, new { @class = "dropdown-item" })
                        @Html.ActionLink("員工新增", "Register", "Account", new { area = "Admin" }, new { @class = "dropdown-item" })
                    </div>
                </div>
                <div class="nav-item dropdown">
                    <a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown">會員管理</a>
                    <div class="dropdown-menu">
                        @Html.ActionLink("會員列表", "Index", "Home", new { area = "Customer" }, new { @class = "dropdown-item" })
                    </div>
                </div>
                <div class="nav-item dropdown">
                    <a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown">產品管理</a>
                    <div class="dropdown-menu">
                        @Html.ActionLink("產品列表", "Index", "Product", new { area = "Admin" }, new { @class = "dropdown-item" })
                    </div>
                </div>
            </div>
            <div class="form-inline ml-auto">
                @Html.Partial("_AdminLoginPartial")
            </div>
        </div>

    </nav>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - 我的 ASP.NET 應用程式</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/kendoJS")
    @Scripts.Render("~/bundles/SharedJS")
    @RenderSection("scripts", required: false)
</body>
</html>
